---
import { getCollection, render } from "astro:content";
import type { CollectionEntry } from "astro:content";
import Main from "../../layouts/Main.astro";

export const prerender = true;

export async function getStaticPaths() {
  const posts = await getCollection("blog");
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

const { post } = Astro.props as { post: CollectionEntry<"blog"> };
const { Content } = await render(post);
const site = Astro.site ?? new URL("https://upmaru.com");
const generatedOgImage = !post.data.draft
  ? new URL(`/blog/${post.slug}.png`, site).toString()
  : undefined;
const ogImage = post.data.ogImage
  ? new URL(post.data.ogImage, site).toString()
  : generatedOgImage;
---

<Main
  title={`${post.data.title} | Upmaru Blog`}
  description={post.data.description}
  image={ogImage}
>
  <article class="mx-auto max-w-3xl px-6 py-24 lg:py-32">
    <a href="/blog" class="text-sm font-semibold text-primary hover:underline"
      >&larr; Back to Blog</a
    >
    <header class="mt-6">
      <h1 class="text-4xl font-bold tracking-tight text-primary sm:text-5xl">
        {post.data.title}
      </h1>
      <p class="mt-3 text-base-content/70">{post.data.description}</p>
      <div class="mt-5 flex items-center gap-3">
        {
          post.data.authorImage && (
            <img
              src={post.data.authorImage}
              alt={`${post.data.author} profile photo`}
              class="h-12 w-12 rounded-full object-cover ring-2 ring-primary/20"
              loading="lazy"
            />
          )
        }
        <div>
          <p class="text-sm font-semibold text-primary">{post.data.author}</p>
          <p class="text-sm text-base-content/60">
            Published{" "}
            {
              post.data.pubDate.toLocaleDateString("en-US", {
                year: "numeric",
                month: "long",
                day: "numeric",
              })
            }
          </p>
        </div>
      </div>
    </header>

    <div
      class="prose mt-10 max-w-none prose-headings:text-primary prose-p:text-base-content prose-strong:text-base-content prose-li:text-base-content prose-a:text-primary prose-blockquote:border-primary/40 prose-blockquote:text-primary/90 prose-code:text-primary"
    >
      <Content />
    </div>
  </article>
</Main>

<script>
  import mermaid from "mermaid";

  mermaid.initialize({ startOnLoad: false });
  mermaid.run({ querySelector: "pre.mermaid" });
</script>

<style is:global>
  article .prose pre.mermaid {
    display: flex;
    justify-content: center;
    overflow-x: auto;
    background: transparent;
    border: 0;
    padding: 0;
  }

  article .prose pre.mermaid > svg,
  article .prose svg[id^="mermaid-"] {
    display: block;
    margin-inline: auto;
    max-width: 100%;
    height: auto;
  }
</style>
