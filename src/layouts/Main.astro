---
import "../styles/global.css";
const defaultTitle = "Upmaru";
const defaultDescription =
  "Upmaru is the AI-native stack for builders and creators, combining infrastructure, intelligence, and application layers.";
const defaultImage = new URL("/og.png", Astro.url).toString();
const {
  title = defaultTitle,
  description = defaultDescription,
  image = defaultImage,
} = Astro.props;
---

<html lang="en" data-theme="night">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="manifest" href="/site.webmanifest" />
    <link rel="mask-icon" href="/safari-pinned-tab.svg" color="#5bbad5" />
    <meta name="msapplication-TileColor" content="#da532c" />
    <meta name="theme-color" content="#0f172a" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <script
      defer
      data-domain="upmaru.com"
      src="https://plausible.io/js/script.js"></script>
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={image} />
    <meta property="og:image:alt" content={title} />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={image} />
  </head>
  <body class="min-h-screen bg-base-200 text-base-content">
    <main>
      <slot />
    </main>

    <footer
      class="footer sm:footer-horizontal footer-center gap-y-1 bg-transparent text-base-content px-4 py-10 mt-16"
    >
      <aside>
        <p>
          Copyright Â© {new Date().getFullYear()} - All right reserved by Upmaru, Inc.
        </p>
      </aside>
      <nav class="grid grid-flow-col gap-3 items-center">
        <a href="/blog/" class="link link-hover">Blog</a>
        <span>&bull;</span>
        <a href="/terms/" class="link link-hover">Terms</a>
        <span>&bull;</span>
        <a href="/privacy/" class="link link-hover">Privacy</a>
        <span>&bull;</span>
        <a href="https://github.com/upmaru" aria-label="GitHub">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="20"
            height="20"
            viewBox="0 0 24 24"
            class="fill-current"
          >
            <path
              d="M12 2C6.477 2 2 6.59 2 12.253c0 4.53 2.865 8.371 6.839 9.728.5.096.682-.223.682-.495 0-.244-.009-.891-.014-1.75-2.782.615-3.369-1.395-3.369-1.395-.455-1.182-1.11-1.497-1.11-1.497-.908-.637.069-.624.069-.624 1.004.072 1.532 1.055 1.532 1.055.892 1.563 2.341 1.112 2.91.85.091-.664.35-1.112.636-1.368-2.221-.259-4.555-1.14-4.555-5.076 0-1.122.389-2.039 1.029-2.757-.103-.26-.446-1.305.098-2.72 0 0 .84-.276 2.75 1.053A9.332 9.332 0 0 1 12 6.826c.85.004 1.705.117 2.504.344 1.909-1.329 2.748-1.053 2.748-1.053.546 1.415.203 2.46.1 2.72.64.718 1.027 1.635 1.027 2.757 0 3.946-2.337 4.814-4.566 5.068.359.318.678.946.678 1.907 0 1.377-.012 2.489-.012 2.829 0 .274.18.596.688.494C19.138 20.62 22 16.781 22 12.253 22 6.59 17.523 2 12 2z"
            ></path>
          </svg>
        </a>
      </nav>
    </footer>
  </body>
</html>
